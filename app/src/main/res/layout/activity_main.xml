<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
	    xmlns:app="http://schemas.android.com/apk/res-auto"
	    xmlns:tools="http://schemas.android.com/tools"
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:background="@drawable/gradient_back"
	    tools:context=".activity.MainActivity">


	<LinearLayout
		    android:orientation="vertical"
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content">

	 <de.hdodenhof.circleimageview.CircleImageView
		     android:src="@drawable/astronaut"
 		     android:layout_marginTop="50dp"
		     android:id="@+id/image"
		     android:layout_gravity="center_horizontal"

		     android:layout_width="200dp"
		     android:layout_height="200dp"/>
	<TextView
		    android:text="به ما بپیوندید"
		    android:layout_width="wrap_content"
		    android:textSize="35sp"
		    android:layout_marginTop="50dp"
		    android:id="@+id/text_peyvand"
		    android:layout_gravity="center_horizontal"
 		    android:textStyle="bold"
		    android:textColor="#000"
		    android:layout_height="wrap_content"/>
	<TextView
		    android:text="همین حالا ثبت نام کنید و از آخرین\n مناقصه ها و مزایده ها مطلع شوید"
		    android:layout_gravity="center_horizontal"
		    android:layout_marginBottom="@dimen/margin_st"
		    android:textColor="#000"
 		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"/>
	<Button
		    android:text="ساخت حساب کاربری"
		    android:id="@+id/button_signUp"
		    android:background="@drawable/back_button_up"
		    android:textColor="#fff"
		    android:layout_marginTop="@dimen/margin_st"
		    android:textStyle="bold"
		    android:layout_width="match_parent"
		    android:layout_gravity="center_horizontal"

		    android:layout_marginRight="32dp"
		    android:layout_marginLeft="32dp"
 		    android:layout_height="wrap_content"/>
	<Button
		    android:text="ورود"
		    android:id="@+id/signIn"
		    android:layout_marginRight="32dp"
		    android:layout_marginLeft="32dp"
		    android:background="@drawable/back_button_in"
		    android:layout_gravity="center_horizontal"
		    android:layout_marginTop="20dp"
		    android:textColor="#574CFC"
		    android:layout_width="match_parent"
		    android:layout_marginBottom="20dp"
		    android:layout_height="wrap_content"/>
	</LinearLayout>

</ScrollView>