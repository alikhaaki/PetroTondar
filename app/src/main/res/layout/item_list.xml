<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
	    xmlns:app="http://schemas.android.com/apk/res-auto"
	    android:layout_width="120dp"
	    android:layout_height="160dp"
	    android:layout_marginBottom="@dimen/margin_st"
	    android:layout_marginLeft="@dimen/margin_st"
	    android:layout_marginRight="@dimen/margin_st"
	    android:orientation="vertical"
	    app:cardCornerRadius="6dp"
	    app:cardElevation="6dp">

	<RelativeLayout
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content">

		<ImageView
			    android:id="@+id/image_list"
			    android:layout_width="match_parent"
			    android:layout_height="100dp"
			    android:layout_margin="2dp"
			    android:src="@drawable/t_shirt"/>

		<TextView
			    android:id="@+id/text_title_list"
			    android:layout_width="match_parent"
			    android:layout_height="wrap_content"
			    android:layout_below="@id/image_list"
			    android:gravity="center"
			    android:text="مناقصه کفش"
			    android:textSize="16sp"/>

		<TextView
			    android:id="@+id/text_price_list"
			    android:layout_width="match_parent"
			    android:layout_height="wrap_content"
			    android:layout_below="@id/text_title_list"
			    android:gravity="center"
			    android:layout_marginBottom="@dimen/margin_st"
			    android:text="از 30 هزار تومان"
			    android:textColor="#000"/>
	</RelativeLayout>
</androidx.cardview.widget.CardView>