<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	    xmlns:app="http://schemas.android.com/apk/res-auto"
	    xmlns:tools="http://schemas.android.com/tools"
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:background="@drawable/gradient_back"
	    tools:context=".activity.RegisterActivity">

	<ImageView
		    android:id="@+id/image"
		    android:layout_width="160dp"
		    android:layout_height="160dp"
		    android:layout_centerHorizontal="true"
		    android:layout_marginTop="16dp"
		    android:src="@drawable/register_form"/>

	<TextView
		    android:id="@+id/text"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_below="@id/image"
		    android:layout_centerHorizontal="true"
		    android:layout_marginTop="16dp"
		    android:text="ثبت نام"
		    android:textColor="#000"
		    android:textSize="20sp"/>

	<TextView
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_above="@id/editTextName_register"
		    android:layout_alignParentRight="true"
		    android:text="نام و نام خانوادگی "
		    android:layout_marginRight="@dimen/margin_st"
		    android:layout_marginTop="@dimen/margin_st"
		    android:layout_marginBottom="@dimen/margin_st"
		    android:textColor="#000"/>

	<EditText
		    android:id="@+id/editTextName_register"
		    android:layout_width="match_parent"
		    android:layout_height="45dp"
		    android:layout_marginTop="@dimen/margin_st"
		    android:layout_below="@id/text"
		    android:layout_marginLeft="32dp"
		    android:layout_marginRight="32dp"
		    android:background="@drawable/back_card"
		    android:drawableLeft="@drawable/ic_person_outline_black_24dp"

		    android:textColor="#000"/>

	<TextView
		    android:id="@+id/textphone"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_below="@id/editTextName_register"
		    android:layout_alignParentRight="true"
		    android:layout_marginTop="@dimen/margin_st"
		    android:layout_marginRight="@dimen/margin_st"
		    android:layout_marginBottom="@dimen/margin_st"
		    android:text="شماره تلفن همراه "
		    android:textColor="#000"/>

	<EditText
		    android:id="@+id/editTextPhone_register"
		    android:layout_width="match_parent"
		    android:layout_height="45dp"
		    android:layout_below="@id/textphone"
		    android:layout_marginLeft="32dp"
		    android:layout_marginRight="32dp"
		    android:layout_marginBottom="@dimen/margin_st"
		    android:inputType="number"
		    android:maxLength="11"
		    android:background="@drawable/back_card"
		    android:drawableLeft="@drawable/ic_phone_android_black_24dp"

		    android:imeOptions="actionDone"
		    android:textColor="#000"/>

	<TextView
		    android:id="@+id/textCodeMelli_register"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_below="@id/editTextPhone_register"
		    android:layout_marginRight="@dimen/margin_st"
 		    android:layout_alignParentRight="true"
		    android:text=" کد ملی "
		    android:textColor="#000"/>

	<TextView
		    android:id="@+id/text_send_pic"
		    android:layout_width="wrap_content"
		    android:layout_height="55dp"
		    android:layout_below="@+id/textCodeMelli_register"

		    android:layout_marginLeft="32dp"
 		    android:layout_marginBottom="6dp"

		    android:background="@drawable/back_card"
		    android:drawableRight="@drawable/ic_image_black_24dp"
		    android:layout_marginRight="@dimen/margin_st"
		    android:padding="2dp"
		    android:text="تصویر\n کارت ملی"
		    android:textColor="#000"/>

	<EditText
		    android:layout_width="190dp"
		    android:layout_height="55dp"
		    android:layout_below="@+id/textCodeMelli_register"
		    android:id="@+id/editCodeMelli"
		    android:layout_marginLeft="8dp"
 		    android:layout_alignParentRight="true"
		    android:layout_marginRight="32dp"
		    android:background="@drawable/back_card"
		    android:drawableLeft="@drawable/ic_verified_user_black_24dp"

		    android:maxLength="10"
		    android:inputType="number"
		    android:imeOptions="actionDone"
		    android:textColor="#000"/>

	<Button
		    android:id="@+id/button_signUp"
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:layout_below="@id/editCodeMelli"
		    android:layout_marginTop="32dp"
		    android:layout_marginRight="32dp"
		    android:layout_marginLeft="32dp"
 		    android:background="@drawable/back_button_up"
		    android:text="ارسال"
		    android:textColor="#ddd"
		    android:textStyle="bold"/>
</RelativeLayout>