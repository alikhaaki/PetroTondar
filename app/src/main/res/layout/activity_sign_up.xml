<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
	    xmlns:app="http://schemas.android.com/apk/res-auto"
	    xmlns:tools="http://schemas.android.com/tools"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:background="@drawable/gradient_back"
	    tools:context=".activity.SignUpActivity">

	<LinearLayout
		    android:orientation="vertical"
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content">

	<ImageView
		    android:id="@+id/image"
		    android:layout_width="200dp"
		    android:layout_marginTop="32dp"
		    android:layout_height="200dp"
		    android:layout_gravity="center_horizontal"
		    android:src="@drawable/tablet"/>

	<TextView
		    android:id="@+id/text_sign"
		    android:layout_width="wrap_content"

		    android:layout_height="wrap_content"
		    android:layout_gravity="center_horizontal"
 		    android:layout_marginTop="16dp"
		    android:text="ثبت نام"
		    android:textColor="#000"
		    android:textSize="20sp"
		    android:textStyle="bold"/>

	<TextView
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_marginBottom="@dimen/margin_st"
		    android:layout_gravity="center_horizontal"
		    android:layout_marginTop="@dimen/margin_st"
 		    android:gravity="center"
		    android:text="شماره تلفن همراه خود را برای دریافت\n کد احراز هویت وارد نمایید"
		    android:textColor="#000"/>

	<androidx.cardview.widget.CardView
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
 		    android:layout_marginLeft="32dp"
		    android:layout_marginTop="@dimen/margin_st"
		    android:layout_gravity="center_horizontal"
		    android:layout_marginRight="32dp"
		    android:layout_marginBottom="32dp"
		    android:background="@drawable/back_card"
		    app:cardCornerRadius="5dp"
		    app:cardElevation="8dp">

		<LinearLayout
			    android:layout_width="match_parent"
			    android:layout_height="wrap_content"
			    android:orientation="vertical">

			<EditText
				    android:id="@+id/editText_phone"
				    android:layout_width="match_parent"
				    android:layout_height="50dp"
  				    android:layout_margin="16dp"

				    android:background="@drawable/back_edit"
				    android:maxLength="11"
				    android:gravity="center_vertical|right"
				    android:paddingRight="6dp"

				    android:hint="شماره تلفن"
				    android:inputType="number"/>

			<Button
				    android:id="@+id/button_signUp"
				    android:layout_width="match_parent"
				    android:layout_height="wrap_content"
				    android:layout_margin="16dp"
				    android:background="@drawable/back_button_up"
				    android:text="دریافت کد"
				    android:textColor="#ddd"
				    android:textStyle="bold"/>
		</LinearLayout>
	</androidx.cardview.widget.CardView>
	</LinearLayout>

</ScrollView>